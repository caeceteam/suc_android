<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suc.suc_android_solution.MainFragment">

    <ImageView
        android:id="@+id/image_background_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="top"
        android:layout_marginBottom="330dp"
        android:src="@drawable/foto_home" />

    <ImageButton
        android:id="@+id/button_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_background_home"
        android:layout_alignEnd="@+id/text_see_all"
        android:layout_alignRight="@+id/text_see_all"
        android:layout_marginBottom="55dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:src="@drawable/ic_format_list_bulleted_black_24dp" />

    <ImageButton
        android:id="@+id/button_near_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_near_me"
        android:layout_alignStart="@+id/text_near_me"
        android:layout_alignTop="@+id/button_see_all"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:src="@drawable/ic_map_black_24dp" />

    <ImageButton
        android:id="@+id/button_more_nedeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_near_me"
        android:layout_alignLeft="@+id/text_more_nedeed"
        android:layout_alignStart="@+id/text_more_nedeed"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:src="@drawable/ic_add_alert_black_24dp" />

    <TextView
        android:id="@+id/text_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_near_me"
        android:layout_alignBottom="@+id/text_near_me"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:text="@string/home_see_all"
        android:textColor="@color/colorText"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_near_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_near_me"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_toLeftOf="@+id/text_more_nedeed"
        android:layout_toStartOf="@+id/text_more_nedeed"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:text="@string/home_near_me"
        android:textColor="@color/colorText"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_more_nedeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_more_nedeed"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:text="@string/home_more_nedeed"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_donate"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/text_see_all"
        android:layout_alignStart="@+id/text_see_all"
        android:layout_below="@+id/button_see_all"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorLoginButton"
        android:text="@string/home_button_donate" />

</RelativeLayout>